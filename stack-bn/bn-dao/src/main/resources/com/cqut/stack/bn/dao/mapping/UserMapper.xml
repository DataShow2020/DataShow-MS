<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cqut.stack.bn.dao.mapper.UserMapper" >
  <resultMap id="BaseResultMap" type="com.cqut.stack.bn.entity.entity.User" >
    <id column="user_id" property="userId" jdbcType="VARCHAR" />
    <result column="account" property="account" jdbcType="VARCHAR" />
    <result column="user_name" property="userName" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
      <result column="role_name" property="role" jdbcType="VARCHAR"/>
  </resultMap>

  <select id="findUserByAccount" resultMap="BaseResultMap" parameterType="java.lang.String" >
      SELECT
            sys_user.user_id,
            account,
            user_name,
            `password`,
            role_name
        FROM
            sys_user,
            sys_role,
            sys_user_role
        WHERE
            sys_user.user_id = sys_user_role.user_id
        AND sys_role.role_id = sys_user_role.role_id
        AND account = #{account,jdbcType=VARCHAR}
  </select>

  <select id="checkAccount" resultType="java.lang.Boolean" parameterType="java.lang.String">
    SELECT
        count(user_id)
    FROM
        sys_user
    WHERE
        account = #{account,jdbcType=VARCHAR}
  </select>
    <!-- 插入用户表 -->
  <insert id="insertUser" parameterType="com.cqut.stack.bn.dao.mapper.UserMapper">
    INSERT INTO `sys_user` (
      `user_id`,
      `user_name`,
      `account`,
      `password`
    )
    VALUES(#{userId,jdbcType=VARCHAR}, #{userName,jdbcType=VARCHAR}, #{account,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR})
  </insert>
    <!-- 插入用户角色关联表 -->
    <insert id="insertUserRoleRelation" parameterType="java.lang.String">
    INSERT INTO `sys_user_role` (
      `user_role_relation_id`,
      `user_id`,
      `role_id`
    )
    VALUES(#{UserRoleRelationId,jdbcType=VARCHAR}, #{UserRoleRelationId,jdbcType=VARCHAR}, 1)
  </insert>

</mapper>