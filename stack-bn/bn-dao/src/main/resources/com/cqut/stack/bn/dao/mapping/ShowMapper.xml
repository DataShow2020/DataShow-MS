<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cqut.stack.bn.dao.mapper.ShowMapper">
    <!-- 获取训练集数据 -->
    <select id="getShowData" resultType="com.cqut.stack.bn.entity.entity.Show" parameterType="com.cqut.stack.bn.entity.dto.show.ShowInputDTO">
        select
        ID id,
        age,
        Gender gender,
        Education education,
        QueryList queryList
        from traindata
        where
        (ISNULL(#{age}) || age LIKE CONCAT('%', #{age}, '%'))
        <if test="gender != null and gender != ''">
            and Gender = #{gender,jdbcType=INTEGER}
        </if>
        <if test="education != null and education != ''">
            and Education = #{education,jdbcType=INTEGER}
        </if>
    </select>
